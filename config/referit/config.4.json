{
  "name" : "Multi-Hop FiLM + (img after)",

  "model": {

    "type" : "film",

    "inputs": {
      "crop": true,
      "image": true
    },

    "question": {
      "word_embedding_dim": 200,
      "rnn_state_size": 512,
      "glove" : false,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "spatial": {
      "no_mlp_units": 30
    },

    "classifier":
    {
      "inputs" :
      {
       "question": true,
       "category": false,
       "spatial": true
      },

      "no_mlp_units": 512
    },

    "film_input":
    {
      "category": false,
      "spatial": false,
      "mask": false,

      "reading_unit": {
        "reading_unit_type" : "basic",

        "attention_hidden_units": 0,
        "shared_attention": true,

        "inject_img_before": true,
        "inject_img_after": false,

        "sum_memory" : false
      }

    },


    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

      "attention" : {
        "mode": "none"
      }

    },

    "crop": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,
      "scale" : 1.1,

      "attention" : {
        "mode": "none"
      }

    },

    "film_block":
    {
      "stem" : {
        "spatial_location" : true,
        "mask" : true,
        "conv_out": 256,
        "conv_kernel": [3,3]
      },

      "resblock" : {
        "feature_size" : [128, 128, 128, 128],
        "spatial_location" : true,
        "mask" : true,
        "kernel1" : [1,1],
        "kernel2" : [3,3]
      },

      "head" : {
        "spatial_location" : true,
        "mask" : true,
        "conv_out": 512,
        "conv_kernel": [1,1],

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp": 256,
          "no_glimpses": 1
        }
      }
    },

  "dropout_keep_prob" : 1.0

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 2e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling" ,"basic_reading_unit"]
  },

  "seed": -1
}