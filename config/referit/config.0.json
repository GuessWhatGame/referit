{
  "name" : "Baseline",

  "model": {

    "type" : "film",

    "inputs": {
      "crop": true,
      "image": true
    },

    "question": {
      "word_embedding_dim": 200,
      "rnn_state_size": 512,
      "glove" : false,
      "bidirectional" : true,
      "layer_norm" : true,
      "max_pool" : false
    },

    "spatial": {
      "no_mlp_units": 30
    },

    "classifier":
    {
      "inputs" :
      {
       "question": true,
       "category": false,
       "spatial": true
      },

      "no_mlp_units": 512
    },

    "image": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp": 256,
          "no_glimpses": 1
        }

    },

    "crop": {
      "image_input": "conv",
      "dim": [14, 14, 1024],
      "normalize": false,
      "scale" : 1.1,

        "attention" : {
          "mode": "glimpse",
          "no_attention_mlp": 256,
          "no_glimpses": 1
        }
    },

  "dropout_keep_prob" : 1.0

  },

  "optimizer": {
    "no_epoch": 10,
    "learning_rate": 2e-4,
    "batch_size": 64,
    "clip_val": 10.0,
    "weight_decay": 5e-6,
    "weight_decay_add": ["film_stack"],
    "weight_decay_remove": ["feedback_loop", "FiLM_layer" ,"pooling" ,"basic_reading_unit"]
  },

  "seed": -1
}